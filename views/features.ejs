<%- include('partials/header') %>

<main class="features-container">
    <!-- Hero Section -->
    <section class="features-hero">
        <div class="hero-content">
            <h1>Powerful Features for Your Business</h1>
            <p>Everything you need to manage your inventory and sales efficiently</p>
        </div>
    </section>

    <!-- Key Features Section -->
    <section class="key-features">
        <div class="section-content">
            <h2>Key Features</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class='bx bx-box'></i>
                    </div>
                    <h3>Inventory Management</h3>
                    <p>Track stock levels in real-time, set low stock alerts, and manage multiple warehouses effortlessly.</p>
                    <ul class="feature-list">
                        <li>Real-time stock tracking</li>
                        <li>Automated reorder points</li>
                        <li>Batch inventory updates</li>
                        <li>Stock history and analytics</li>
                    </ul>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class='bx bx-shopping-bag'></i>
                    </div>
                    <h3>Sales Management</h3>
                    <p>Process sales quickly, track orders, and manage customer information all in one place.</p>
                    <ul class="feature-list">
                        <li>Quick sale processing</li>
                        <li>Order tracking system</li>
                        <li>Customer database</li>
                        <li>Sales analytics</li>
                    </ul>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class='bx bx-chart'></i>
                    </div>
                    <h3>Analytics & Reports</h3>
                    <p>Get detailed insights into your business performance with comprehensive analytics and reports.</p>
                    <ul class="feature-list">
                        <li>Sales reports</li>
                        <li>Inventory analytics</li>
                        <li>Performance metrics</li>
                        <li>Custom report builder</li>
                    </ul>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class='bx bx-user'></i>
                    </div>
                    <h3>User Management</h3>
                    <p>Control access levels and manage team permissions with our robust user management system.</p>
                    <ul class="feature-list">
                        <li>Role-based access</li>
                        <li>Activity logging</li>
                        <li>Team collaboration</li>
                        <li>Security controls</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Dashboard Preview -->
    <section class="dashboard-preview">
        <div class="section-content">
            <div class="preview-grid">
                <div class="preview-text">
                    <h2>Intuitive Dashboard</h2>
                    <p>Get a complete overview of your business at a glance with our powerful dashboard.</p>
                    <ul class="feature-list">
                        <li>Real-time updates</li>
                        <li>Customizable widgets</li>
                        <li>Key performance indicators</li>
                        <li>Interactive charts</li>
                    </ul>
                </div>
                <div class="preview-image">
                    <img src="/images/dashboard-preview.png" alt="Dashboard Preview">
                </div>
            </div>
        </div>
    </section>

    <!-- Integration Section -->
    <section class="integrations">
        <div class="section-content">
            <h2>Seamless Integrations</h2>
            <div class="integration-grid">
                <div class="integration-card">
                    <img src="/images/integrations/shopify.png" alt="Shopify">
                    <h3>Shopify</h3>
                </div>
                <div class="integration-card">
                    <img src="/images/integrations/woo.png" alt="WooCommerce">
                    <h3>WooCommerce</h3>
                </div>
                <div class="integration-card">
                    <img src="/images/integrations/quickbooks.png" alt="QuickBooks">
                    <h3>QuickBooks</h3>
                </div>
                <div class="integration-card">
                    <img src="/images/integrations/stripe.png" alt="Stripe">
                    <h3>Stripe</h3>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing CTA -->
    <section class="pricing-cta">
        <div class="section-content">
            <h2>Ready to Transform Your Business?</h2>
            <p>Choose a plan that works for you</p>
            <div class="cta-buttons">
                <a href="/pricing" class="btn-primary">View Pricing</a>
                <a href="/contact" class="btn-outline">Contact Sales</a>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %> 