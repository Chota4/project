<%- include('partials/header') %>

<main class="about-container">
    <!-- Hero Section -->
    <section class="about-hero">
        <div class="hero-content">
            <h1>About Addidas Management System</h1>
            <p>Streamlining inventory and sales management for better business efficiency</p>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="mission-section">
        <div class="section-content">
            <div class="mission-grid">
                <div class="mission-text">
                    <h2>Our Mission</h2>
                    <p>At Addidas Management System, we're dedicated to revolutionizing how businesses handle their inventory and sales operations. Our platform combines powerful features with intuitive design to create a seamless management experience.</p>
                    <div class="mission-stats">
                        <div class="stat-item">
                            <h3>10K+</h3>
                            <p>Active Users</p>
                        </div>
                        <div class="stat-item">
                            <h3>50M+</h3>
                            <p>Products Managed</p>
                        </div>
                        <div class="stat-item">
                            <h3>99.9%</h3>
                            <p>System Uptime</p>
                        </div>
                    </div>
                </div>
                <div class="mission-image">
                    <img src="/public/uploads/mission.jpg" alt="mission">
                </div>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="values-section">
        <div class="section-content">
            <h2>Our Core Values</h2>
            <div class="values-grid">
                <div class="value-card">
                    <i class='bx bx-bulb'></i>
                    <h3>Innovation</h3>
                    <p>Constantly evolving our solutions to meet modern business needs</p>
                </div>
                <div class="value-card">
                    <i class='bx bx-shield-quarter'></i>
                    <h3>Reliability</h3>
                    <p>Providing stable and secure systems you can count on</p>
                </div>
                <div class="value-card">
                    <i class='bx bx-support'></i>
                    <h3>Support</h3>
                    <p>24/7 dedicated support to help you succeed</p>
                </div>
                <div class="value-card">
                    <i class='bx bx-trending-up'></i>
                    <h3>Growth</h3>
                    <p>Helping businesses scale and achieve their goals</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team-section">
        <div class="section-content">
            <h2>Meet Our Team</h2>
            <div class="team-grid">
                <div class="team-card">
                    <div class="member-image">
                        <img src="/public/uploads/product 1.jpg" alt="product 1">
                    </div>
                    <h3>John Doe</h3>
                    <p class="position">CEO & Founder</p>
                    <div class="social-links">
                        <a href="#"><i class='bx bxl-linkedin'></i></a>
                        <a href="#"><i class='bx bxl-twitter'></i></a>
                    </div>
                </div>
                <div class="team-card">
                    <div class="member-image">
                        <img src="/public/uploads/product 2.jpg" alt="product 2">
                    </div>
                    <h3>Jane Smith</h3>
                    <p class="position">Head of Technology</p>
                    <div class="social-links">
                        <a href="#"><i class='bx bxl-linkedin'></i></a>
                        <a href="#"><i class='bx bxl-twitter'></i></a>
                    </div>
                </div>
                <div class="team-card">
                    <div class="member-image">
                        <img src="/public/uploads/product 4.jpg" alt="product 4">
                    </div>
                    <h3>Mike Johnson</h3>
                    <p class="position">Lead Developer</p>
                    <div class="social-links">
                        <a href="#"><i class='bx bxl-linkedin'></i></a>
                        <a href="#"><i class='bx bxl-github'></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="section-content">
            <h2>Ready to Get Started?</h2>
            <p>Join thousands of businesses already using Addidas Management System</p>
            <div class="cta-buttons">
                <a href="/signup" class="btn-primary">Start Free Trial</a>
                <a href="/contact" class="btn-outline">Contact Sales</a>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %> 