<%- include('partials/header') %>

<main class="contact-container">
    <!-- Hero Section -->
    <section class="contact-hero">
        <div class="hero-content">
            <h1>Get in Touch</h1>
            <p>We'd love to hear from you. Our team is always here to help.</p>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
        <div class="section-content">
            <div class="contact-grid">
                <!-- Contact Information -->
                <div class="contact-info">
                    <h2>Contact Information</h2>
                    <div class="info-items">
                        <div class="info-item">
                            <i class='bx bx-map'></i>
                            <div class="item-content">
                                <h3>Visit Us</h3>
                                <p>123 Business Street<br>New York, NY 10001<br>United States</p>
                            </div>
                        </div>
                        <div class="info-item">
                            <i class='bx bx-phone'></i>
                            <div class="item-content">
                                <h3>Call Us</h3>
                                <p>+1 (555) 123-4567<br>Mon-Fri, 9am-6pm EST</p>
                            </div>
                        </div>
                        <div class="info-item">
                            <i class='bx bx-envelope'></i>
                            <div class="item-content">
                                <h3>Email Us</h3>
                                <p>support@addidas.com<br>sales@addidas.com</p>
                            </div>
                        </div>
                    </div>

                    <div class="social-links">
                        <h3>Follow Us</h3>
                        <div class="social-icons">
                            <a href="#" class="social-icon"><i class='bx bxl-facebook'></i></a>
                            <a href="#" class="social-icon"><i class='bx bxl-twitter'></i></a>
                            <a href="#" class="social-icon"><i class='bx bxl-linkedin'></i></a>
                            <a href="#" class="social-icon"><i class='bx bxl-instagram'></i></a>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="contact-form">
                    <h2>Send us a Message</h2>
                    <% if (typeof success !== 'undefined' && success) { %>
                        <div class="alert alert-success">
                            Your message has been sent successfully!
                        </div>
                    <% } %>
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } %>
                    <form action="/contact" method="POST" novalidate>
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" 
                                   id="name" 
                                   name="name" 
                                   class="form-control" 
                                   required 
                                   value="<%= typeof form !== 'undefined' ? form.name : '' %>">
                        </div>

                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" 
                                   id="email" 
                                   name="email" 
                                   class="form-control" 
                                   required 
                                   value="<%= typeof form !== 'undefined' ? form.email : '' %>">
                        </div>

                        <div class="form-group">
                            <label for="subject">Subject</label>
                            <input type="text" 
                                   id="subject" 
                                   name="subject" 
                                   class="form-control" 
                                   required 
                                   value="<%= typeof form !== 'undefined' ? form.subject : '' %>">
                        </div>

                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea id="message" 
                                      name="message" 
                                      class="form-control" 
                                      rows="5" 
                                      required><%= typeof form !== 'undefined' ? form.message : '' %></textarea>
                        </div>

                        <button type="submit" class="btn-primary">
                            <i class='bx bx-send'></i> Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section">
        <div class="section-content">
            <h2>Frequently Asked Questions</h2>
            <div class="faq-grid">
                <div class="faq-item">
                    <h3>How quickly can I get started?</h3>
                    <p>You can start using our system immediately after signing up. The setup process typically takes less than 30 minutes.</p>
                </div>
                <div class="faq-item">
                    <h3>Do you offer customer support?</h3>
                    <p>Yes, we provide 24/7 customer support through email and phone. Premium plans include dedicated support.</p>
                </div>
                <div class="faq-item">
                    <h3>Can I import existing data?</h3>
                    <p>Yes, our system supports importing data from various formats including CSV, Excel, and direct database migrations.</p>
                </div>
                <div class="faq-item">
                    <h3>Is there a free trial?</h3>
                    <p>Yes, we offer a 14-day free trial with full access to all features. No credit card required.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Map Section -->
    <section class="map-section">
        <div class="map-container">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d193595.25436351647!2d-74.11976373946229!3d40.69766374932285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2s!4v1656543279593!5m2!1sen!2s" 
                width="100%" 
                height="450" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </section>
</main>

<%- include('partials/footer') %> 